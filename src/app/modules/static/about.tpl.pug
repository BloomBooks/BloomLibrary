mixin SIL(name, roles)
	div
		span.notranslate
			=name
			| &nbsp;(
			a(href='http://sil.org') SIL International
			| ):&nbsp;
		span.needed-for-localization
			=roles

mixin link(display, url)
	a(href=url)
		=display

mixin linkPlusSpace(display, url)
	a(href=url)
		=display
	| &nbsp;

